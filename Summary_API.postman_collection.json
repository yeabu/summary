{
  "info": {
    "name": "Summary API",
    "description": "Summary项目API接口测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "认证",
      "item": [
        {
          "name": "用户登录",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "    pm.test('登录成功', function () {",
                  "        pm.expect(jsonData.token).to.be.a('string');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          }
        },
        {
          "name": "修改密码",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"old_pwd\": \"admin123\",\n  \"new_pwd\": \"newpassword\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/user/change_password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "change_password"]
            }
          }
        }
      ]
    },
    {
      "name": "采购管理",
      "item": [
        {
          "name": "创建采购记录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supplier\": \"阿里巴巴有限公司\",\n  \"order_number\": \"PO20240001\",\n  \"purchase_date\": \"2024-08-25\",\n  \"total_amount\": 15500.50,\n  \"receiver\": \"仓库1\",\n  \"items\": [\n    {\n      \"product_name\": \"笔记本电脑\",\n      \"quantity\": 2,\n      \"unit_price\": 5000.00,\n      \"amount\": 10000.00\n    },\n    {\n      \"product_name\": \"显示器\",\n      \"quantity\": 5,\n      \"unit_price\": 1100.10,\n      \"amount\": 5500.50\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/purchase/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "purchase", "create"]
            }
          }
        },
        {
          "name": "查询采购记录",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/purchase/list",
              "host": ["{{baseUrl}}"],
              "path": ["api", "purchase", "list"]
            }
          }
        }
      ]
    },
    {
      "name": "费用管理",
      "item": [
        {
          "name": "创建费用记录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2024-08-25\",\n  \"category\": \"办公用品\",\n  \"amount\": 299.50,\n  \"detail\": \"购买打印纸和文具\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/expense/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expense", "create"]
            }
          }
        },
        {
          "name": "查询费用记录",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/expense/list?month=2024-08&category=办公用品",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expense", "list"],
              "query": [
                {
                  "key": "month",
                  "value": "2024-08"
                },
                {
                  "key": "category",
                  "value": "办公用品"
                }
              ]
            }
          }
        },
        {
          "name": "修改费用记录",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"date\": \"2024-08-25\",\n  \"category\": \"办公用品\",\n  \"amount\": 350.00,\n  \"detail\": \"购买打印纸、文具和订书机\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/expense/update?id=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expense", "update"],
              "query": [
                {
                  "key": "id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "费用统计",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/expense/stats?month=2024-08",
              "host": ["{{baseUrl}}"],
              "path": ["api", "expense", "stats"],
              "query": [
                {
                  "key": "month",
                  "value": "2024-08"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}