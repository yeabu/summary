.page {
  padding: 24rpx 24rpx calc(220rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  background: #f5f6f8;
  min-height: 100vh;
}
.loading,
.empty {
  text-align: center;
  color: #86909c;
  margin-top: 160rpx;
}
.cell-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.cell {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(31, 45, 61, 0.06);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.cell-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 32rpx;
}
.cell-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.cell-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2d3d;
}
.cell-desc {
  font-size: 24rpx;
  color: #86909c;
}
.cell-meta {
  min-width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}
.amount {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2d3d;
}
.cell-stats {
  display: flex;
  justify-content: space-between;
  color: #4e5969;
  font-size: 24rpx;
}
.cell-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}
.fab {
  position: fixed;
  right: 48rpx;
  bottom: calc(160rpx + env(safe-area-inset-bottom));
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.18);
  z-index: 20;
}
.fab-inner {
  width: 48rpx;
  height: 48rpx;
  position: relative;
}
.fab-bar,
.fab-bar.v {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 48rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background: #ffffff;
  transform: translate(-50%, -50%);
}
.fab-bar.v {
  transform: translate(-50%, -50%) rotate(90deg);
}
.sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: 0 -12rpx 48rpx rgba(0, 0, 0, 0.18);
  z-index: 30;
}
.sheet-body {
  padding: 32rpx;
  padding-bottom: calc(220rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}
.sheet-title {
  font-weight: 600;
  font-size: 32rpx;
  color: #1f2d3d;
}
.row.between {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.sheet-scroll {
  max-height: 70vh;
}
.cell-label {
  font-size: 26rpx;
  color: #4e5969;
  margin-bottom: 12rpx;
  display: block;
}
.input,
.picker {
  background: #f7f8fa;
  border: 1rpx solid #e5e6eb;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #1f2d3d;
}
.form-summary {
  margin-top: 24rpx;
  padding: 16rpx 0;
  color: #1f2d3d;
  font-weight: 500;
}
.sheet-footer {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.85) 0%, #ffffff 48%);
  box-sizing: border-box;
}
.btn-primary {
  width: 100%;
  color: #ffffff;
  border-radius: 999rpx;
}
