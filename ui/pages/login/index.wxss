.login-page { min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 40rpx 32rpx; box-sizing: border-box; }
.brand { display: flex; flex-direction: column; align-items: center; margin-bottom: 32rpx; }
.logo { width: 320rpx; height: 320rpx; border-radius: 24rpx; box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.08); }
.title { margin-top: 16rpx; font-size: 36rpx; font-weight: 600; }
.form { width: 100%; max-width: 640rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 32rpx; box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.05); }
.field { margin-bottom: 24rpx; }
.label { display: block; color: #666; font-size: 26rpx; margin-bottom: 12rpx; }
.input { background: #f7f8fa; border: 1rpx solid #e5e6eb; border-radius: 12rpx; padding: 22rpx 24rpx; }
.btn-primary { margin-top: 8rpx; background-color: #07c160; color: #fff; border-radius: 12rpx; }
.muted { color: #9aa1a9; }
.footer { margin-top: 24rpx; font-size: 24rpx; }
