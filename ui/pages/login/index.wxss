
.container {
  padding: 40rpx;
}

.login-form {
  width: 80%;
  margin: 0 auto;
  min-height: 300rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-group text {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}

.form-group input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.login-btn {
  width: 100%;
  background: #1989fa;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.forgot-password {
  margin-top: 20rpx;
  text-align: center;
  color: #576b95;
  font-size: 28rpx;
}

.footer { margin-top: 40rpx; text-align: center; color: #999; font-size: 24rpx; }

/* ===== Enhanced styles for ColorUI-based login ===== */
.login-page { min-height: 100vh; display:flex; flex-direction:column; align-items:center; justify-content:center; padding: 40rpx 32rpx; box-sizing: border-box; }
.brand { display:flex; flex-direction:column; align-items:center; margin-bottom: 32rpx; }
.brand .logo { width: 280rpx; height: 280rpx; border-radius: 24rpx; box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.06); }
.brand .title { margin-top: 16rpx; font-size: 36rpx; font-weight: 600; }

/* 外层表单左右 15% 留白 */
.login-form { margin-left: 15%; margin-right: 15%; }
/* 内部输入控件左右 5% 留白（仅影响当前页） */
.login-form .cu-form-control { margin-left: 5%; margin-right: 5%; }

/* （移除眼睛控件相关样式） */

/* 强制登录按钮为蓝色背景、白字 */
.login-submit { 
  background: linear-gradient(135deg, #1E80FF, #1664FF) !important;
  color: #ffffff !important; 
  border-color: #1664FF !important; 
  box-shadow: 0 12rpx 28rpx rgba(22, 100, 255, 0.45);
}
.login-submit[disabled] { opacity: .6; }
