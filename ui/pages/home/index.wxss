.home { display: flex; flex-direction: column; gap: 24rpx; padding: 24rpx; padding-bottom: calc(200rpx + env(safe-area-inset-bottom)); }
.welcome-card { border-radius: 24rpx; padding: 36rpx 32rpx; box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.08); transition: background 0.3s ease, box-shadow 0.3s ease; }
.welcome-title { font-size: 40rpx; font-weight: 700; margin-bottom: 8rpx; }
.welcome-subtitle { font-size: 26rpx; opacity: 0.9; }
.grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 24rpx; }
.tile { border-radius: 20rpx; padding: 32rpx; display: flex; flex-direction: column; align-items: flex-start; justify-content: center; gap: 18rpx; min-height: 200rpx; box-shadow: 0 16rpx 48rpx rgba(31, 45, 61, 0.08); transition: background 0.3s ease; }
.tile-icon { width: 96rpx; height: 96rpx; background-repeat: no-repeat; background-position: center; background-size: contain; -webkit-mask-repeat: no-repeat; -webkit-mask-position: center; -webkit-mask-size: contain; mask-repeat: no-repeat; mask-position: center; mask-size: contain; }
.tile-label { font-size: 32rpx; font-weight: 600; }
.notice-card { display: flex; align-items: flex-start; gap: 8rpx; padding: 24rpx; border-radius: 20rpx; box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06); transition: background 0.3s ease, border-color 0.3s ease, color 0.3s ease; }
.notice-title { font-size: 26rpx; font-weight: 600; }
.notice-text { font-size: 24rpx; line-height: 1.5; flex: 1; }
