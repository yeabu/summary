<view class="page {{deviceProfileClass}}">
  <view class="card">
    <view class="col" style="gap: 8rpx;">
      <text>角色：{{roleLabel}}</text>
      <button size="mini" bindtap="logout">退出登录</button>
    </view>
  </view>

  <view class="card">
    <view class="col" style="gap: 12rpx;">
      <text class="muted">修改密码</text>
      <input placeholder="原密码" password="true" bindinput="onOld" class="input"></input>
      <input placeholder="新密码" password="true" bindinput="onNew" class="input"></input>
      <button size="mini" bindtap="changePwd" loading="{{loading}}">提交</button>
    </view>
  </view>

  <view class="card">
    <view class="col" style="gap: 12rpx;">
      <text class="muted">个性化</text>
      <view class="row" style="gap: 12rpx; align-items:center;">
        <text>语言</text>
        <picker mode="selector" range="{{langs}}" value="{{langIndex}}" bindchange="onLang">
          <view class="picker">{{langs[langIndex]}}</view>
        </picker>
      </view>
      <view class="row" style="gap: 12rpx; align-items:center;">
        <text>主题色</text>
        <view class="row theme-options">
          <block wx:for="{{themeColors}}" wx:key="*this">
            <view
              class="theme-dot {{item === themeActiveColor ? 'active' : ''}}"
              style="background: {{item}};"
              bindtap="setTheme"
              data-color="{{item}}"
            ></view>
          </block>
        </view>
      </view>
    </view>
  </view>

  <bottom-nav id="fallback-nav" wx:if="{{showFallbackNav}}" active="mine" />
</view>
