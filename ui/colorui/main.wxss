/* Minimal ColorUI-like styles (subset) */
:root { --primary: #07c160; --danger: #fa5151; --warning: #fbbd08; --info: #10aeff; --text: #1F2D3D; --muted:#9AA1A9; }

.cu-btn { display:inline-flex; align-items:center; justify-content:center; padding: 20rpx 28rpx; border-radius: 8rpx; border: 1rpx solid transparent; background:#f5f7fa; color:#333; }
.cu-btn.block { display:flex; width:60%; }
.cu-btn.primary { 
  background: #1989fa; /* 蓝色背景 */
  color: #fff; 
  border: 1rpx solid #fff; 
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 0 30rpx; /* 调整内边距 */
  height: 80rpx; /* 固定高度 */
  line-height: 80rpx; /* 垂直居中 */
}
.cu-btn.warning { background: var(--warning); color:#fff; }
.cu-btn.danger { background: var(--danger); color:#fff; }
.cu-btn.round { border-radius: 999rpx; }
.cu-btn.plain { background:#fff; border-color: var(--primary); color: var(--primary); }
.cu-btn[disabled] { opacity:.6; }

.cu-card { background:#fff; border-radius: 16rpx; box-shadow: 0 8rpx 36rpx rgba(31,45,61,.06); padding: 24rpx; }
.cu-card + .cu-card { margin-top: 16rpx; }

.cu-list { background:#fff; border-radius:12rpx; overflow:hidden; }
.cu-item { display:flex; align-items:center; justify-content:space-between; padding: 24rpx; border-bottom:1rpx solid #F0F2F5; }
.cu-item:last-child{ border-bottom:0; }
.cu-item .title { font-size:28rpx; color: var(--text); }
.cu-item .desc { font-size:24rpx; color: var(--muted); margin-top: 4rpx; }
.cu-item .value { font-weight:600; color: var(--text); }

.cu-form { background:#fff; border-radius: 16rpx; box-shadow: 0 8rpx 36rpx rgba(31,45,61,.06); padding: 24rpx; }
.cu-form-group { margin-bottom: 24rpx; }
.cu-form-label { display:block; color:#6B7785; font-size:26rpx; margin-bottom: 10rpx; }
.cu-form-control { background:#F7F8FA; border:1rpx solid #E5E6EB; border-radius: 12rpx; padding: 18rpx 22rpx; }

.cu-tag { padding: 6rpx 14rpx; border-radius: 999rpx; font-size: 22rpx; }
.cu-tag.primary { background: #E8FFF2; color: var(--primary); }
.cu-tag.info { background: #E6F2FF; color: #0771f3; }
.cu-tag.warning { background:#FFF4E5; color:#B54708; }

.cu-title { font-size: 36rpx; font-weight: 600; color: var(--text); }
.cu-subtitle { font-size: 26rpx; color: var(--muted); }